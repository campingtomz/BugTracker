@using BugTracker.Helpers;
@model IEnumerable<BugTracker.ApplicationUser>
@{
    ViewBag.Title = "ManageProjectUsers";
    var projHelper = new BugTracker.Helpers.ProjectHelper();
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();
    <h2>ManageProjectUsers</h2>
    <div class="row">
        <div class="col-6">
            <h2> Select Users</h2>
            @Html.ListBox("UserIds")
        </div>
        <div class="col-6">
            <h2> Select Projects</h2>
            @Html.ListBox("ProjectIds")
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <button type="submit" class="btn btn-warning">Assign Users</button>
        </div>
    </div>

}

<hr />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Created)
        </th>
       
        <th></th>
    </tr>

    @foreach (var user in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => user.Name)
            </td>
            <td>
                @foreach(var project in projHelper.)
                {

                }
            </td>
        </tr>
    }

</table>
