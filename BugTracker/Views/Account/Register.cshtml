@{Layout = null;}
@model BugTracker.Models.ExtendedRegisterViewModel


@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <!-- Tell the browser to be responsive to screen width -->
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="">
        <meta name="author" content="">
        <!-- Favicon icon -->
        <link rel="icon" type="image/png" sizes="16x16" href="~/Content/favicon/zanis-logo.png">
        <title>Registration</title>
        <link href="~/Content/css/bootstrap.min.css" rel="stylesheet">
        <link href="~/Content/css/dropify.min.css" rel="stylesheet" />
        <link href="~/Content/css/style.css" rel="stylesheet">
        <link href="~/Content/css/colors/blue.css" id="theme" rel="stylesheet">

    </head>

    <body>

        <section id="wrapper">
            <div class="login-register" style="background-image: url(~/Content/images/background/login-register.jpg);">
                <div class="login-box card">
                    <div class="card-body">
                        <form class="form-horizontal form-material" id="loginform" action="index.html">
                            <h3 class="box-title m-b-20">Sign Up</h3>
                            <div class="form-group">
                                <div class="col-xs-12">
                                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @type = "text", @placeholder = "First Name" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-12">
                                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @type = "text", @placeholder = "Last Name" })
                                </div>
                            </div>
                            <div class="form-group ">
                                <div class="col-xs-12">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @type = "Email", @placeholder = "Email" })
                                </div>
                            </div>
                            <div class="form-group ">
                                <div class="col-xs-12">
                                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @type = "password", @placeholder = "Password" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-12">
                                    @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control", @type = "password", @placeholder = "Confirm Password" })
                                </div>
                            </div>

                            <hr />
                            <div class="form-group">
                                <div class="col-xs-12">
                                    <label>Avatar Image Upload :</label>
                                    <input name="image" type="file" class=" dropify form-control" id="fileUpload" />
                                    @Html.ValidationMessageFor(model => model.Avatar, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <hr />

                            <div class="form-group text-center m-t-20">
                                <div class="col-xs-12">
                                    <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Register</button>
                                </div>
                            </div>
                            <div class="form-group m-b-0">
                                <div class="col-sm-12 text-center">
                                    <div>Already have an account? <a href="pages-login.html" class="text-info m-l-5"><b>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</b></a></div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </body>
</html>
<script src="~/Scripts/jquery.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/dropify.min.js"></script>
<script src="~/Scripts/jquery.inputmask.bundle.js"></script>
<script>
    $(document).ready(function () {
        // Basic
        $('.dropify').dropify();
    });
</script>
<script>
    $(function (e) {
        "use strict";
        $(".date-inputmask").inputmask("dd/mm/yyyy"),
            $(".phone-inputmask").inputmask("(999) 999-9999")

</script>
}






