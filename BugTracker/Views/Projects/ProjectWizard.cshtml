@model BugTracker.ViewModels.ProjectWizardVM

@*@if (ViewBag.Errors.Length > 0)
    {
        @Html.Raw(ViewBag.Errors)
    }*@



<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body wizard-content">
                    <h4 class="card-title">Step wizard</h4>

                    @using (Html.BeginForm("ProjectWizard", "Projects", FormMethod.Post, new { @class = "tab-wizard wizard-circle" }))
                    {
                        @Html.AntiForgeryToken()
                        <h6>Project Info</h6>
                        <section>
                            <div class="row justify-content-center">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Name)
                                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                        
                                    </div>
                                </div>
                            </div>
                            <div class="row justify-content-center">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Description)
                                        @Html.TextAreaFor(model => model.Description,  new { @class = "form-control" } )
                                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                       
                                    </div>
                                </div>
                            </div>
                            @*<div class="row justify-content-center">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="jobTitle2">Due Date :</label>
                                        <input type="date" class="form-control" id="jobTitle2" name="idate">
                                    </div>
                                </div>
                            </div>*@
                        </section>
                        <!-- Step 2 -->
                        <h6>Assign Project manager</h6>
                        <section>
                            <div class="row justify-content-center">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.ProjectManagerId, "ProjectManagerId", htmlAttributes: new { @class = "control-label" })
                                        @Html.DropDownList("ProjectManagerId", null, htmlAttributes: new { @class = "form-control" })
                                        
                                    </div>
                                </div>
                            </div>
                        </section>
                        <!-- Step 3 -->
                        <h6>Assign Developers and Submitters</h6>
                        <section>
                            <div class="row justify-content-center">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.DeveloperIds, "DeveloperIds", htmlAttributes: new { @class = "control-label" })
                                        @Html.ListBox("DeveloperIds", null, htmlAttributes: new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="row justify-content-center">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.SubmitterIds, "SubmitterIds", htmlAttributes: new { @class = "control-label " })
                                        @Html.ListBox("SubmitterIds", null, htmlAttributes: new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                        </section>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


<div>
    @Html.ActionLink("Back to List", "Index")
</div>


