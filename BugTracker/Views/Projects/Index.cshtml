
@using PagedList.Mvc;
@using PagedList;
@model IPagedList<BugTracker.ViewModels.ProjectManageVM>


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Project List</h4>
                <div class="table-responsive m-t-40">
                    <table id="example23" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>Project Name</th>
                                <th>Project Manager</th>
                                <th>Project Developers</th>
                                <th>Project Submitters</th>
                                <th>Project Created Date</th>
                                <th>Number Of Tickets</th>
                                <th>Action</th>

                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var project in Model)
                            {
                                <tr>
                                    <td>@Html.Label(project.projectValue.Name)</td>
                                    <td>@Html.Label(project.projectManager.FullName)</td>
                                    <td>
                                        <select class="form-control custom-select" tabindex="1">
                                            @foreach (var user in project.Developers)
                                            {
                                                <option>@user.FullName</option>
                                            }
                                        </select>
                                    </td>
                                    <td>
                                        <select class="form-control custom-select" tabindex="1">
                                            @foreach (var user in project.Submitters)
                                            {
                                                <option>@user.FullName</option>
                                            }
                                        </select>
                                    </td>
                                    <td>@Html.Label(project.projectValue.Created.ToString("MMM dd yyyy"))</td>
                                    <td></td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = project.projectValue.Id }) |
                                        @Html.ActionLink("Details", "Details", new { id = project.projectValue.Id }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = project.projectValue.Id })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                    @Html.ActionLink("Create New", "ProjectWizard", "Projects", null, new { @class = "btn btn-success" })
                </div>
            </div>
        </div>
    </div>
</div>



